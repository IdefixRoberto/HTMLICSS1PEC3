    "npm-run-all": "^4.1.5",
    "parcel": "^2.11.0",
    "postcss-preset-env": "^9.1.1",
    "posthtml-include": "^1.7.4",
    "rimraf": "^5.0.1",
    "sass": "^1.32.8"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "lightningcss": "^1.24.1"
  },
  "repository": {
    "type": "git",
